.img-box {
  width: 200rpx;
  height: 200rpx;
  margin: 50rpx auto;
  border-radius: 50%;
  overflow: hidden;
}

.form {
  margin: 0 30rpx;
  display: block;
}

.form label {
  line-height: 50rpx;
  font-size: 36rpx;
  margin-bottom: 10rpx;
  display: block;
}

.form .ipt-box {
  border: 1rpx solid #aaa;
  padding: 10rpx;
  height: 150rpx;
  margin-bottom: 40rpx;
  border-radius: 5rpx;
}

.form .ipt-box textarea {
  display: block;
  width: 100%;
  height: 100%;
}

.form .input {
  height: 80rpx;
  display: flex;
  padding: 0 10rpx;
  align-items: center;
}

.form .ipt-box input {
  width: 100%;
  height: 100%;
}

.form .btn-submit {
  background-color: #ff4c4c;
  color: #fff;
}
