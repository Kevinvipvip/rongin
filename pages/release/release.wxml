<view class='container'>
  <view class="img-box">
    <image src="{{user.avatarUrl}}" mode="widthFix"></image>
  </view>
  <form class="form" bindsubmit="getFormData">
    <label for="content">内容</label>
    <view class="ipt-box">
      <textarea placeholder="请输入" maxlength="-1" id="content" name="content"/>
    </view>
    <label for="author">作者</label>
    <view class="ipt-box input">
      <input placeholder="作者" id="author" name="author"/>
    </view>
    <button class="btn-submit" formType="submit">提交</button>
  </form>
</view>
